<h1>Signup Here!!</h1>

<%= form_for @user do |f| %>
  <%= f.text_field :name %>
  <%= f.email_field :email %>
  <%= f.password_field :password %>
  <%= f.submit %>
<% end %>


<form method="POST" action="/users">
  <input
    type="text"
    name="name"
    placeholder="Name">

  <input
    type="email"
    name="email"
    placeholder="Email">

  <input
    type="password"
    name="password"
    placeholder="Password">

  <input type="submit" value="Signup">
</form>
